<Window x:Class="AuthApp.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать профиль" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Имя пользователя" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox Name="UsernameTextBox" />

        <TextBlock Text="Новый пароль" FontWeight="Bold" Margin="0,10,0,5"/>
        <PasswordBox Name="PasswordBox" />

        <Button Content="Сохранить изменения" Click="SaveButton_Click" Margin="10"/>
    </StackPanel>
</Window>
