<UserControl x:Class="AuthApp.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <StackPanel>
        <Image Name="AvatarImage" Width="100" Height="100" Margin="10" />
        <TextBlock Text="Имя пользователя:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBlock Name="UsernameTextBlock" FontSize="16"/>
        <TextBlock Text="Роль:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBlock Name="RoleTextBlock" FontSize="16"/>

        <Button Content="Редактировать профиль" Click="EditProfileButton_Click" Margin="10"/>
        <Button Content="Обновить данные" Click="RefreshButton_Click" Margin="10"/>
        <Button Content="Выйти" Click="LogoutButton_Click" Margin="10"/>
    </StackPanel>
</UserControl>
